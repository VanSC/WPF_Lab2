<Window x:Class="lavb2vane.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lavb2vane"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Grid>
        <Menu>
            <MenuItem Header="Operaciones">
                <MenuItem Header="Ingresos" Click="Ingresos_operacionClick"/>
                <MenuItem Header="Salidas"/>
            </MenuItem>
            <MenuItem Header="Mantenimiento">
                <MenuItem Header="Conductores" />
                <MenuItem Header="Transportistas" />
                <MenuItem Header="Camiones" Click="Registro_CamionClick" />
                <MenuItem Header="Productos" />
            </MenuItem>
            <MenuItem Header="Reportes">
                <MenuItem Header="Cargas" />
                <MenuItem Header="Ingresos" />
                <MenuItem Header="Salidas" />
            </MenuItem>
        </Menu>
    </Grid>
</Window>
